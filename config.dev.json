{
  "app": {
    "name": "KRWL HOF Community Events [PREVIEW]",
    "description": "Community events scraper and viewer with geolocation filtering"
  },
  "debug": true,
  "performance": {
    "cache_enabled": false,
    "prefetch_events": false
  },
  "data": {
    "source": "both",
    "sources": {
      "real": {
        "url": "events.json",
        "description": "Real scraped events data"
      },
      "demo": {
        "url": "events.demo.json",
        "description": "Demo events with current timestamps for testing"
      },
      "both": {
        "urls": ["events.json", "events.demo.json"],
        "description": "Combine real and demo events (useful for testing with live data)"
      }
    }
  },
  "scraping": {
    "sources": [
      {
        "name": "Wochenmarkt Hof",
        "url": "https://www.hof.de/hof/hof_deu/leben/veranstaltungen.html",
        "type": "html",
        "enabled": true,
        "notes": "Veranstaltungshinweise"
      },
      {
        "name": "Freiheitshalle",
        "url": "https://www.freiheitshalle.de/de/die-freiheitshalle/veranstaltungen",
        "type": "html",
        "enabled": true,
        "notes": "Kulturzentrum"
      },
      {
        "name": "Galeriehaus",
        "url": "https://www.facebook.com/GaleriehausHof/events",
        "type": "facebook",
        "enabled": true,
        "notes": "Kunstkneipe"
      },
      {
        "name": "Vanishing Walls",
        "url": "https://www.facebook.com/people/Vanishing-Walls/100093518893300/",
        "type": "facebook",
        "enabled": true,
        "notes": "Kunstverein"
      },
      {
        "name": "Punkrock in Hof",
        "url": "https://www.facebook.com/people/Punk-in-Hof/100090512583516/",
        "type": "facebook",
        "enabled": true,
        "notes": "Punkrock"
      },
      {
        "name": "VHS Last Minute",
        "url": "https://www.vhshoferland.de/p/last-minute-kurse-646-CAT-KAT282",
        "type": "html",
        "enabled": true,
        "notes": "Volkshochschule"
      },
      {
        "name": "Wochenmarkt Rehau",
        "url": "https://rehau.bayern/de/kultur/veranstaltungen/wochenmarkt",
        "type": "html",
        "enabled": true,
        "notes": "Wochenmarkt"
      },
      {
        "name": "Wochenmarkt Selb",
        "url": "https://www.selb.de/freizeit-tourismus/veranstaltungen/detailansicht/selber-wochenmarkt",
        "type": "html",
        "enabled": true,
        "notes": "Wochenmarkt"
      },
      {
        "name": "Kunstkaufhaus",
        "url": "https://www.facebook.com/Kunstkaufhaus.Hof/events",
        "type": "facebook",
        "enabled": true,
        "notes": "Kunstkneipe"
      },
      {
        "name": "DiePelle",
        "url": "https://www.facebook.com/OffTheaterDuPelle/events",
        "type": "facebook",
        "enabled": true,
        "notes": "Off-Theater"
      },
      {
        "name": "Frankenpost",
        "url": "https://event.frankenpost.de/index.php?kat=&community=95028+Hof&range=50",
        "type": "html",
        "enabled": true,
        "notes": "Regionalzeitung"
      },
      {
        "name": "Brauerei Meinel",
        "url": "https://www.facebook.com/MeinelBraeu/upcoming_hosted_events",
        "type": "facebook",
        "enabled": true,
        "notes": "Privatbrauerei"
      }
    ],
    "interval_minutes": 60
  },
  "filtering": {
    "max_distance_km": 5.0,
    "show_until": "next_sunrise"
  },
  "map": {
    "default_center": {
      "lat": 50.3167,
      "lon": 11.9167
    },
    "default_zoom": 13,
    "tile_provider": "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png",
    "attribution": "&copy; <a href='https://www.openstreetmap.org/copyright'>OpenStreetMap</a> contributors"
  },
  "editor": {
    "require_approval": true,
    "auto_publish": false
  }
}
